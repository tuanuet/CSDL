<% include header %>
			<div class="jumbotron row">
				<div class="col-md-6">
					<table>
						<p style="display:none"><%= Recipe.idRecipe %></p>
						<tr>
							<th>Recipe Name</th>
							<td><input class="form-control" type="text" size="30" id="recipename" value="<%= Recipe.RecipeName%>"/></td>
						</tr>
						<tr>
							<th>Description</th>
							<td><textarea class="form-control" rows="2" cols="55" id="RecipeDescription" placeholder="Great Meal!"><%= Recipe.RecipeDescription%></textarea></td>
						</tr>
						<tr>
							<th>Food Category</th>
							<td><div id="FoodCategories"><%= Recipe.Foodcategory.FoodCategory%></div></td>
						</tr>
						<tr>
							<th>Source</th>
							<td><input class="form-control" type="text" size="30" placeholder="Nancy" id="Source" value="<%= Recipe.Source%>"/></td>
						</tr>
						<tr>
							<th>Time to Prepare</th>
							<td><input class="form-control" type="number" size="30" id="timetoprepare" placeholder="45 minutes" value="<%= Recipe.TimeToPrepare%>"/></td>
						</tr>
						<tr>
							<th>Number of Serving</th>
							<td><input class="form-control" type="number" size="30" id="NumberOfServings" placeholder="8" value="<%= Recipe.NumberOfServings%>"/></td>
						</tr>
						<tr>
							<th>Vegetarian</th>
							<% if( Recipe.Vegetarian == 1){%>
								<td><input type="radio" name="" value="on" checked id="Vegeterian"></td>
							<%}else {%>
								<td><input type="radio" name="" value="on" id="Vegeterian"></td>
							<% }%>
						</tr>
					</table>
				</div>
				<div class="col-md-6">
					<table>
						<tr>
							<th>Instructions</th>
							<td><textarea class="form-control" rows="4" cols="55" id="instructions"><%= Recipe.Instructions%></textarea></td>
						</tr>
						<tr>
							<th>Utensils</th>
							<td><textarea class="form-control" rows="2" cols="55" id="Utensils"><%= Recipe.Utensils%></textarea></td>
						</tr>
						<tr>
							<th>Calories Per Serving</th>
							<td><input class="form-control" type="text" size="30" id="CaloriesPerServing" placeholder="300" value="<%= Recipe.CaloriesPerServing%>"/></td>
						</tr>
						<tr>
							<th>Nutrional Info</th>
							<td><textarea class="form-control" rows="2" cols="55" id="NutritionalInformation" placeholder="Very nutrional"><%= Recipe.NutritionalInformation%></textarea></td>
						</tr>
					</table>
				</div>
			</div>
			<div class="row">
				<div class="col-md-8">
					<table class="table table-hover table-bordered " style="text-align:center;">
						<tr class="info">
							<th>Ingredient</th>
							<th>Quality</th>
							<th>Comments</th>
						</tr>
						<% for(var i=0;i<Recipe.Recipeingredients.length;i++) {%>
							<tr class="danger">
								<td><%= Recipe.Recipeingredients[i].Ingredient.Ingredient%></td>
								<td><input class="form-control" type="number" value="<%= Recipe.Recipeingredients[i].Quantity%>"></td>
								<td><input class="form-control" type="text" value="<%= Recipe.Recipeingredients[i].Comments%>"></td>
							</tr>
						<%}%>
					</table>
				</div>
				<div class="col-md-3">
					<button type="button" class="btn btn-success" style="margin-top: 30px;" id="saveRecipe">Save</button>
				</div>
			</div>
		</div>
		<script type="text/javascript" src="/javascripts/form-handler2.js"></script>
	</body>
</html>
